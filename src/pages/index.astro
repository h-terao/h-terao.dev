---
import { Image } from "astro:assets";
import { Icon } from "astro-iconify";
import avatarImage from "@/assets/avatar.png";
import Head from "@/components/Head.astro";
import Header from "@/components/Header.astro";
import "@/styles/global.css";
import { siteConfig } from "@/site.config";
---
<!DOCTYPE html>
<html lang={ siteConfig.lang } class="smooth-scroll">
  <Head />
  <body class="flex flex-col min-h-screen w-full bg-background items-center">
    <header class="w-6xl max-w-full mt-8 px-8">
      <Header title={siteConfig.title} headerMenus={siteConfig.headerMenus} />
    </header>
    <main class="font-body text-body w-6xl max-w-full px-8 flex flex-1 items-center justify-center">
      <div class="flex flex-col items-center justify-center">
				<Image
					src={avatarImage}
					alt="Avatar"
					class="w-56 h-56 rounded-full bg-white"
					format="webp"
				/>
				<h1 class="text-4xl font-bold font-headline text-center mt-8">{ siteConfig.title }</h1>
				<p class="text-center mt-2">
					{ siteConfig.description }
				</p>
				<div class="flex flex-row justify-center mt-4">
					{ siteConfig.footer.map((item) => (
						<a
							href={item.link}
							class="text-body/60 hover:text-primary mx-2"
							target="_blank"
							rel="noopener noreferrer"
						>
							<Icon name={item.icon} class="inline-block size-6" />
						</a>
					))}
				</div>
			</div>
    </main>
  </body>
</html>