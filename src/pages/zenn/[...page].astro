---
import { type CollectionEntry, getCollection } from "astro:content";
import type { GetStaticPaths, Page } from "astro";
import { pageSize } from "@/constants.ts";
import Layout from "@/layouts/ZennLayout.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const entries = await getCollection("zenn");
  return paginate(entries, { pageSize });
};

type Props = { page: Page<CollectionEntry<"zenn">> };
const { page } = Astro.props;
---
<Layout title="Zenn" page={page} />