---
import { cn } from "@/lib";

type Props = {
  title: string;
  headerMenus: { name: string; link: string }[];
};

const { title, headerMenus } = Astro.props;
const pathname = Astro.url.pathname;
---
<div class={cn(
  "flex flex-row justify-between items-center",
  "w-full px-4 sm:px-6 md:px-8 py-4",
  "bg-white rounded-sm border border-black",
)}>
  <a
    href="/"
    class="font-logo text-header-logo text-2xl sm:text-3xl font-bold"
  >
    { title.toUpperCase() }
  </a>
  <div class="flex flex-row gap-4 sm:gap-6 md:gap-8 text-base sm:text-lg md:text-xl">
    { headerMenus.map(({ name, link }) => (
      <a
        href={link}
        class={cn(
          "relative",
          "after:absolute after:left-0 after:-bottom-0.5",
          "after:h-0.5 after:w-full after:bg-primary",
          "after:origin-left",
          "after:transition-transform after:duration-300",
          pathname.startsWith(link)
            ? "after:scale-x-100"
            : "after:scale-x-0 hover:after:scale-x-100",
        )}
      >
        { name }
      </a>
    )) }
  </div>
</div>